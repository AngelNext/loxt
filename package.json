{
	"name": "loxt",
	"version": "2.6.0",
	"description": "Loxt is a simple and easy console logger of less than 1kb in size with 0 dependencies.",
	"repository": {
		"type": "git",
		"url": "https://github.com/AngelNext/loxt.git"
	},
	"homepage": "https://github.com/AngelNext/loxt#readme",
	"bugs": {
		"url": "https://github.com/AngelNext/loxt/issues",
		"email": "angelgz.vazquez@gmail.com"
	},
	"main": "index.js",
	"scripts": {
		"build": "esbuild --minify --bundle --outfile=dist/index.cjs src/index.ts && esbuild --minify --bundle --outfile=dist/index.mjs src/index.ts && tsc --emitDeclarationOnly",
		"test": "jest"
	},
	"keywords": [
		"console",
		"logger",
		"colors",
		"log",
		"error",
		"chalk"
	],
	"author": "AngelNext",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.30",
		"esbuild": "^0.14.47",
		"jest": "^28.1.0",
		"ts-jest": "^28.0.3",
		"typescript": "^4.7.0-dev.20220430"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	}
}
